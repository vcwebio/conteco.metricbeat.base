#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="metricbeat.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_metricbeat"
export CONTECO_DC_GLOBAL_BOOTSTACKS=""
export CONTECO_DC_GLOBAL_RUNSTACKS="conteco_dc_metricbeat"
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_metricbeat_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_METRICBEAT_ENVIRONMENT,$CONTECO_DC_METRICBEAT_COMMAND,$CONTECO_DC_METRICBEAT_PORTS,$CONTECO_DC_METRICBEAT_VOLUMES,$CONTECO_DC_METRICBEAT_NETWORKS,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_METRICBEAT_ENVIRONMENT="'ES_METRICBEAT_LOGGING_LEVEL=${DOLLAR}{CONTECO_DC_METRICBEAT_ENVIRONMENT_LOGGING_LEVEL}'"
export CONTECO_DC_METRICBEAT_VOLUMES="'/etc:/hostfs/etc:ro','${DOLLAR}{CONTECO_STACKPREFIX}_metricbeat_volume:/usr/share/metricbeat/data'"
export CONTECO_DC_METRICBEAT_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_metricbeat_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS metricbeat.base
export CONTECO_DC_METRICBEAT_ENVIRONMENT_LOGGING_LEVEL="warning"
export CONTECO_DC_METRICBEAT_DEPLOY_MODE="replicated"
export CONTECO_DC_METRICBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_METRICBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS metricbeat.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
